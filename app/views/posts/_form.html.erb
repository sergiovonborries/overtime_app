<div class="container">
	<div class="row">
		<div class="col-md-12">
      <%= form_for @post, html: { role: "form", id: "edit_post_45" } do |f| %>
        <% if @post.errors.any? %>
          <% @post.errors.full_messages.each do |error| %>
            <%= js add_gritter(error, title: "Overtime App Notification", sticky: false) %>
          <% end %>
        <% end %>
        <div class="form-group">
          <label>
            Fecha
          </label>
          <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="form-group">
					<label>
						Rationale
					</label>
					<%= f.text_area :rationale, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.radio_button :status,'submitted' %>
					<%= f.label :status, "Submitted" %>

					<%= f.radio_button :status,'approved' %>
					<%= f.label :status, "Approved" %>

					<%= f.radio_button :status,'rejected' %>
					<%= f.label :status, "Rejected" %>
				</div>
        <%= f.submit "Save", class: "btn btn-primary" %>

      <% end %>
		</div>
	</div>
</div>
